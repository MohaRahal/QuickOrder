@inherits LayoutComponentBase  

<NavMenu />  

<style>  
   * {  
       margin: 0;  
       padding: 0;  
       box-sizing: border-box;  
   }  

   .top-row {  
       display: flex;  
       align-items: flex-start; 
       justify-content: space-between;  
       background-color: #f8f8f8;  
       border-bottom: 1px solid #ccc;  
       padding: 0 1rem;  
       margin-left: 60px;  
       transition: margin-left 0.3s, background-color 0.3s, color 0.3s;  
       height: 60px;  
   }  

       .top-row h1 {
           font-family: 'Oswald', sans-serif;
           margin: 0;  
           font-size: 1.8rem;  
           text-align: center;  
           flex: 1;  
           transition: color 0.3s;  
       }  

   .right-controls {  
       display: flex;  
       align-items: center;  
       gap: 0.5rem;  
   }  

   article.content {  
       margin-left: 60px;  
       transition: margin-left 0.3s;  
   }  

   .sidebar:hover ~ .top-row {  
       margin-left: 200px;  
   }  

   .sidebar:hover ~ article.content {  
       margin-left: 200px;  
   }

    .footer {
		background-color: #333;
        color: white;
        text-align: center;
        padding: 10px 0;
        font-size: 14px;
        margin: 0;
        flex: 1;
    }
</style>  

<div class="top-row">  
   <h1>QuickOrder</h1>  
   <div class="right-controls">  
       <a href="https://github.com/MohaRahal" target="_blank">Sobre</a>  
   </div>  
</div>  

<article class="content px-4">  
   @Body  
</article>


